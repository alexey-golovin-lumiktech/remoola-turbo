# EditorConfig helps maintain consistent coding styles across IDEs and editors
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 120

# --- Markdown ---
[*.md]
trim_trailing_whitespace = false

# --- JSON / YAML ---
[*.{json,yml,yaml}]
indent_size = 2

# --- Makefiles ---
[Makefile]
indent_style = tab

# --- Shell scripts ---
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# --- TypeScript / JavaScript ---
[*.{js,ts,jsx,tsx,mjs,cjs}]
quote_type = backtick
insert_final_newline = true
