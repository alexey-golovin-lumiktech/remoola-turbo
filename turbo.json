{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_API_BASE_URL",
    "DATABASE_URL",
    "REDIS_URL",
    "OPENAI_API_KEY",
    "JWT_EXPIRES_IN",
    "JWT_REFRESH_TTL",
    "JWT_ACCESS_TTL",
    "JWT_SECRET",
    "JWT_REFRESH_SECRET",
    "FORCE_PAYMENT_RESULT",
    "S3_BUCKET",
    "AWS_REGION",
    "S3_PUBLIC_BASE",
    "COOKIE_DOMAIN",
    "POSTGRES_TIMEZONE",
    "POSTGRES_HOST",
    "POSTGRES_PORT",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "POSTGRES_DB",
    "POSTGRES_SSL",
    "COOKIE_SECURE",
    "SECURE_SESSION_SECRET",
    "PORT"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "build/**"
      ]
    },
    "start": {
      "dependsOn": [
        "build"
      ]
    },
    "lint": {},
    "openapi": {
      "dependsOn": [
        "^build"
      ],
      "cache": false,
      "outputs": [
        "packages/openapi/src/generated/**"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
